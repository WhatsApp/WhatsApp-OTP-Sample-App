# WhatsApp Cloud API (from Meta Developer Console)
WA_PHONE_NUMBER_ID=123456789012345
WA_ACCESS_TOKEN=EAAxxxxxxxxx...
WA_TEMPLATE_NAME=login_otp
WA_TEMPLATE_LANG=en_US

# JWT Secret (generate with: openssl rand -base64 32)
# Used for both session tokens and OTP challenge tokens
JWT_SECRET=your-256-bit-secret-here

# OTP Configuration
OTP_LENGTH=6
# OTP expiry in seconds (default: 300 = 5 minutes)
# This is the time window for the user to enter the code
OTP_EXPIRY_SECONDS=300
